# Rails web (prod)
VITE_CLIENT_SERVER=https://rails-client-server-production.up.railway.app
VITE_SITE_URL=https://rails-web-production.up.railway.app
VITE_ALLOW_INDEXING=true
VITE_SEO_TITLE=
VITE_PORT=5173
# PostHog analytics — required for events to appear. Set at BUILD time (where vite build runs).
# PostHog’s Vite guide uses VITE_PUBLIC_*; we accept either VITE_PUBLIC_* or VITE_*.
VITE_PUBLIC_POSTHOG_KEY=your_posthog_project_key
VITE_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
# Or: VITE_POSTHOG_KEY=... and VITE_POSTHOG_HOST=...
# Set VITE_ENABLE_ANALYTICS=false to disable.
# Auth buttons hidden in production (set to 'true' to show Login/Get Started buttons)
VITE_SHOW_AUTH_BUTTONS=false
# Auth views hidden in production (set to 'true' to enable)
VITE_ENABLE_AUTH_VIEWS=false